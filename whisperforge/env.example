# WhisperForge Environment Configuration
# Copy this to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Configuration (fallback to SQLite if Supabase not configured)
DATABASE_TYPE=supabase  # or 'sqlite'
DATABASE_URL=sqlite:///whisperforge.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# AI Provider API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GROK_API_KEY=your-grok-api-key

# Notion Integration
NOTION_API_KEY=your-notion-integration-token
NOTION_DATABASE_ID=your-notion-database-id

# MCP Configuration
MCP_ENABLED=true
MCP_SERVER_PORT=8080
MCP_LOG_LEVEL=INFO

# Application Configuration
STREAMLIT_PORT=8507
DEBUG_MODE=false
LOG_LEVEL=INFO

# Security Configuration
ALLOWED_ORIGINS=http://localhost:8507,https://your-domain.com
SESSION_TIMEOUT_HOURS=24
RATE_LIMIT_PER_MINUTE=60

# File Upload Configuration
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=mp3,wav,m4a,flac,mp4,mov,avi
UPLOAD_DIRECTORY=uploads/
TEMP_DIRECTORY=temp/

# Content Generation Defaults
DEFAULT_AI_PROVIDER=anthropic
DEFAULT_MODEL=claude-3-7-sonnet-20250219
DEFAULT_TRANSCRIPTION_PROVIDER=openai
DEFAULT_TRANSCRIPTION_MODEL=whisper-1

# Cache Configuration
ENABLE_CACHING=true
CACHE_DIRECTORY=cache/
CACHE_TTL_HOURS=24

# Monitoring and Analytics
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
SENTRY_DSN=your-sentry-dsn-if-using

# Third-party Integrations
ZAPIER_WEBHOOK_URL=your-zapier-webhook-url
SLACK_WEBHOOK_URL=your-slack-webhook-url 