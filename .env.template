# API Keys - Required for functionality
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
NOTION_API_KEY=your_notion_api_key
NOTION_DATABASE_ID=your_notion_database_id
GROK_API_KEY=your_grok_api_key

# Security - Should be changed in production
JWT_SECRET=change_this_to_a_random_secure_string

# Admin User - Change for production
ADMIN_EMAIL=admin@whisperforge.ai
ADMIN_PASSWORD=change_this_password

# Paths - Usually don't need to be changed in Docker
DATABASE_PATH=/app/data/whisperforge.db
DATA_DIR=/app/data
UPLOADS_DIR=/app/uploads
TEMP_DIR=/app/temp
LOGS_DIR=/app/logs
PROMPTS_DIR=/app/prompts

# Debug mode - Set to "true" to enable verbose logging
DEBUG=false 